{
    "globals": {
        "sleep": true,
        "get": true,
        "React": true,
        "map": true,
        "reduce": true
    },
    "env": {
        "browser": true,
        "node": true
    },
    "extends": [
        "standard",
        "standard-react",
        "prettier"
    ],
    "plugins": [
        "prettier",
        "standard"
    ],
    "parser": "babel-eslint",
    "rules": {
        "react/react-jsx-no-undef": 0,
        "react/react-in-jsx-scope": 0,
        "camelcase": 0,
        "no-return-await": 0,
        "no-constant-condition": 0,
        "no-unused-vars": 1,
        "curly": [
            "error",
            "all"
        ],
        "prettier/prettier": [
            "warn",
            {
                "parser": "babylon",
                "singleQuote": true,
                "semi": false,
                "tabWidth": 4,
                "printWidth": 95,
                "useTabs": true,
                "trailingComma": "es5",
                "jsxBracketSameLine": true
            }
        ],
        "react/jsx-indent": [
            0,
            0
        ],
        "react/prop-types": [
            0,
            0
        ],
        "react/jsx-indent-props": [
            0,
            0
        ]
    }
}